          <span className="text-xs bg-white/10 backdrop-blur-sm px-3 py-1 rounded-full border border-white/20">({currentProfileIndex + 1}/{profiles.length})</span>
        </div>

        {/* Action Buttons */}
        <div className="flex space-x-6">
