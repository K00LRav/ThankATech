rules_version = '2';

// Firebase Storage Security Rules for ThankATech
service firebase.storage {
  match /b/{bucket}/o {
    
    // Technician profile photos
    match /technicians/{technicianId}/{fileName} {
      // Allow public read so anyone can view technician profile pictures
      allow read: if true;
      
      // Allow write only if:
      // 1. User is authenticated
      // 2. User is the technician (can only upload to own folder)
      // 3. File is under 2MB (reduced for performance)
      // 4. File is a valid image type
      // 5. Filename is reasonable (prevent path injection)
      allow write: if request.auth != null 
                   && request.auth.uid == technicianId
                   && request.resource.size < 2 * 1024 * 1024  // Max 2MB
                   && request.resource.contentType.matches('image/(jpeg|png|gif|webp)')  // Specific image types
                   && fileName.matches('^[a-zA-Z0-9._-]+\\.(jpg|jpeg|png|gif|webp)$');  // Safe filename
      
      // Allow delete only for own files
      allow delete: if request.auth != null 
                    && request.auth.uid == technicianId;
    }
    
    // Client profile photos
    match /clients/{clientId}/{fileName} {
      // Allow public read so anyone can view client profile pictures
      allow read: if true;
      
      // Allow write only if:
      // 1. User is authenticated
      // 2. User is the client (can only upload to own folder)
      // 3. File is under 2MB
      // 4. File is a valid image type
      // 5. Filename is reasonable
      allow write: if request.auth != null 
                   && request.auth.uid == clientId
                   && request.resource.size < 2 * 1024 * 1024  // Max 2MB
                   && request.resource.contentType.matches('image/(jpeg|png|gif|webp)')  // Specific image types
                   && fileName.matches('^[a-zA-Z0-9._-]+\\.(jpg|jpeg|png|gif|webp)$');  // Safe filename
      
      // Allow delete only for own files
      allow delete: if request.auth != null 
                    && request.auth.uid == clientId;
    }
    
    // Legacy profile photos path (for backwards compatibility)
    match /profile-photos/{userId}/{fileName} {
      // Allow public read so anyone can view profile pictures
      allow read: if true;
      
      // Allow write only if:
      // 1. User is authenticated
      // 2. User is uploading to their own folder
      // 3. File is under 5MB
      // 4. File is an image
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');  // Only images
      
      // Allow delete only for own files
      allow delete: if request.auth != null 
                    && request.auth.uid == userId;
    }
    
    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
